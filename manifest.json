{
    "manifest_version": 4,
    "name": "AITOXX",
    "version": "1.0.3",
    "description": "Capture AI chat content to Flomo notes.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://gemini.google.com/*",
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://qianwen.com/*",
        "https://www.doubao.com/*",
        "https://flomoapp.com/*"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://gemini.google.com/*",
                "https://chatgpt.com/*",
                "https://chat.openai.com/*",
                "https://qianwen.com/*",
                "https://www.doubao.com/*"
            ],
            "js": [
                "content/content.js"
            ],
            "css": [
                "content/styles.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}